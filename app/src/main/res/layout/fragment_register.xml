<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/signup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="20dp"
        android:weightSum="7"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_back_white_48px"
            android:id="@+id/back_image"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="3dp" />

        <TextView
            android:text="@string/sign_up"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/login_text_view"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/username_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_layout"
        android:weightSum="5"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_face_white_48px"
            android:id="@+id/imageView1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_layout_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="true"
            android:textColorHint="@android:color/white"
            android:layout_weight="4"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:imeOptions="actionDone"
                android:hint="@string/username" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_layout"
        android:weightSum="5"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_email_white_48px"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_layout_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="true"
            android:textColorHint="@android:color/white"
            android:layout_weight="4"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:imeOptions="actionDone"
                android:hint="@string/email_id" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_layout"
        android:weightSum="5"
        android:id="@+id/password_layout"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_key_white_48px"
            android:layout_gravity="center"
            android:id="@+id/imageView3"
            android:layout_weight="1"
            android:padding="10dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_layout_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="true"
            android:textColorHint="@android:color/white"
            android:layout_weight="4"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:imeOptions="actionDone"
                android:hint="@string/password"
                android:layout_marginBottom="10dp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="auto"
        app:srcCompat="@drawable/ic_done_white_48px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/register_fab"
        app:backgroundTint="@android:color/white"
        android:tint="@color/colorPrimary"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true" />


</RelativeLayout>